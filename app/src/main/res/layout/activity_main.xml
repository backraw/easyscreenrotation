<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="de.tre.easyscreenrotation.MainActivity">

    <Button
        android:id="@+id/buttonLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LANDSCAPE"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/buttonReverseLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVERSE LANDSCAPE"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/buttonPortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PORTRAIT"
        android:onClick="onButtonClick"/>

    <Button
        android:id="@+id/buttonReversePortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVERSE PORTRAIT"
        android:onClick="onButtonClick"/>

</LinearLayout>
